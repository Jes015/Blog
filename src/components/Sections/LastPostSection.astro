---
import { getCollection } from "astro:content"

const collection = await getCollection('posts')
const lastPost = collection.at(-1)
const lastPostData = lastPost?.data
const lasPostSlug = lastPost?.slug
---

<section class="lastPostSection">
    <div>
        <h2 class="lastPostSection__title" transition:name={lastPostData?.title}>
            {lastPostData?.title}
        </h2>
        <p class="lastPostSection__description">
            {lastPostData?.description}
        </p>
    </div>
    <div>
        <a href=`/post/${lasPostSlug}` class="lastPostSection__button">Check out</a>
    </div>
</section>

<style>
    .lastPostSection {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .lastPostSection__title {
        font-size: 1.1em;
        filter: drop-shadow(0px 0px 1px rgba(255, 255, 255, 0.4811));
    }

    .lastPostSection__description {
        text-wrap: balance;
        font-size: 0.8em;
        margin: 0.5em 0;
    }

    .lastPostSection__button {
        display: inline-flex;
        align-items: center;
        font-size: 0.8em;
        padding: 0.4em;
        padding-top: 0.5em;
    }
</style>
