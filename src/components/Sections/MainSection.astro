---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
---

<section class="mainSection">
    <header class="mainSection__header">
        <Breadcrumbs />
    </header>
    <main class="mainSection__main">
        <slot />
    </main>
</section>

<style>
    .mainSection {
        display: flex;
        position: relative;
        flex-direction: column;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.685);
        border: 0.1em solid var(--border-color);
        margin-bottom: 0.5em;
        border-radius: 0.18em;
        filter: drop-shadow(0px 0px 100px rgba(255, 255, 255, 0.078));
    }

    .mainSection__header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 0.1em solid var(--border-color);
        padding: 0.3em 0.5em;
        min-height: 2.639em;
        height: 100%;
    }

    .mainSection__firstBreadcrumbs {
        font-weight: 600;
    }

    .mainSection__secondBradcrumbs {
        font-size: 0.5em;
        font-weight: 300;
    }

    .mainSection__main {
        flex-grow: 1;
    }

</style>
