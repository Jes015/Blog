---
import { globalConfig } from "@/config"

---

<section class="categoriesSection">
    <header>
        <h4 class="categoriesSection__title">Recomended Sites</h4>
    </header>
    <main>
        <ul class="categoriesSection__list">
            {
                globalConfig.recommendedSites.map((recommendSite) => (
                    <li>
                        <a href={recommendSite.url} target="_blank">
                            {recommendSite.name}
                        </a>
                    </li>
                ))
            }
        </ul>
    </main>
</section>

<style>
    .categoriesSection {
        max-width: 7em;
        width: 100%;
        font-size: 0.9em;
    }

    .categoriesSection__title {
        filter: drop-shadow(0px 0px 1px rgba(255, 255, 255, 0.4811));
    }

    .categoriesSection__list {
        display: flex;
        flex-direction: column;
        gap: 0.5em;
        font-size: 0.8em;
    }
</style>