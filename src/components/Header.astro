---
import Navigation from "@/components/Navigation.astro"
import Search from "@/components/Search.astro"

import { getPathName } from "@/utils"
---

<header class="header">
  <div class="header__container">
    <div class="header__second-container">
      <span>{getPathName(Astro.url)}</span>
      <Search />
    </div>
    <Navigation />
  </div>
</header>

<style>
  .header {
    display: flex;
    align-items: center;
    background-color: var(--header-background-color);
    border-bottom: 0.1em solid var(--border-color);
    padding: 0em 2em;
  }

  .header__container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .header__second-container {
    flex-grow: 1;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.4em 0em;
    font-weight: 800;
    text-transform: capitalize;
    text-wrap: balance;
  }
</style>
