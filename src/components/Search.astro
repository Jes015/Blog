---
import CommandIcon from "@/assets/images/command.svg"
import SearchIcon from "@/assets/images/search.svg"
import { Image } from "astro:assets"
---

<div class="search">
  <Image class="search__search-icon" src={SearchIcon} width={16} height={16} alt="search icon" />
  <span class="search__text">Type / to search</span>
  <Image class="search__command-icon" src={CommandIcon} width={23} height={23} alt="command icon" />
</div>

<style>
  .search {
    display: flex;
    align-items: center;
    color: ;
    gap: 0.5em;
    border: 0.1em solid var(--border-color);
    border-radius: var(--border-radius-value);
    color: var(--input-text-color);
    width: 22.875em;
    height: 2.6em;
    padding: 1em 0.6em;
    font-size: 0.85em;
    cursor: pointer;
  }

  .search__search-icon {
    width: 1.2em;
    height: 1.2em;
  }

  .search__command-icon {
    width: 1.5em;
    height: 1.5em;
  }

  .search__text {
    flex-grow: 1;
    border: none;
  }

  .search:hover {
    border-color: var(--ancord-color);
  }
</style>
