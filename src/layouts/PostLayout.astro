---

interface Props {
    title: string
}

const {title} = Astro.props
---

<section class="postLayout">
    <header class="postLayout__header">
        {title}
    </header>
    <div class="postLayout__container">
        <slot />
    </div>
</section>

<style>
    .postLayout {
    }

    .postLayout__header {
        margin-bottom: 1em
    }
    
    .postLayout__container {
        height: 100%;
        display: grid;
        justify-content: center;
        grid-template-columns: 1fr 1fr;
        grid-auto-rows: minmax(1em, 10em);
        gap: 1em;

    }
</style>